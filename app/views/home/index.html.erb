<section id="jobs">
  <% @jobs.each do |job| %>
    <div class="jobs">
      <% if job.expired? %>
      <p><em>Vaga Expirada</em></p>
        <% else %>
      <h3><%= job.title %></h1>
      <p><%= job.location %></p>
      <p><%= job.company.name %></p>
      <p><%= job.category.name %></p>
      <% if job.recent? %>
        <p><em>Novidade</em></p>
      <% end %>
      <%= link_to 'Ver mais', job %>
      <% end %>
    </div>
  <% end %>
</section>

<aside>
  <% @companies.each do |company| %>
    <%= link_to company.name, company %>
    <% if company.premium? %>
      <p><em>Empresa Premium</em><p>
    <% end %>
  <% end %>
</aside>
<aside>
  <% @categories.each do |category| %>
    <%= link_to category.name, category %>
  <% end %>
</aside>
